<%- include('header'); -%>
<!-- ##### Header Area End ##### -->
<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Your Post</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Blog Content Area Start ##### -->
<section class="blog-content-area section-padding-0-100">
  <div class="container">
    <div class="row justify-content-center">
      <!-- Blog Posts Area -->
      <div class="col-12">
        <!-- Post Details Area -->
        <div class="single-post-details-area">
          <div class="post-content">
            <div class="text-center mb-50">
              <h1 class="post-title" style="color: red"><%=message%></h1>
              <p class="post-date">NAY NEWS</p>
              <h2 class="post-title">Share an interesting fact or news. We will post it on our website</h2>
            </div>
            <!-- Post Thumbnail -->
            <div class="post-thumbnail mb-50">
              <img src="img/blog-img/post.jpg" alt="">
            </div>
            <div class="leave-comment-area clearfix">
              <div class="comment-form">
                <h4 class="headline">Leave A Post</h4>
                <!-- Post Form -->
                <form action="/single-post" method="post">
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <input type="text" class="form-control" name="title" placeholder="Title" required="required">
                        <select name="category" class="form-control" required>
                          <option selected disabled>Category</option>
                          <option value="medicine">medicine</option>
                          <option value="food">food</option>
                          <option value="travel">travel</option>
                          <option value="education">education</option>
                          <option value="politics">politics</option>
                          <option value="sport">sport</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" required="required">
                        <input type="text" class="form-control" name="author" placeholder="FullName" required="required">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <textarea class="form-control" name="content" cols="30" rows="10" placeholder="Post" required></textarea>
                      </div>
                    </div>
                    <div class="col-12">
                      <button type="submit" class="btn nikki-btn">Send</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!-- Headline -->
            <br>
            <br>
            <br>
            <h4 class="headline">Example posts</h4>
            <div class="row">
              <!-- Single Blog Post -->
              <div class="col-12 col-lg-6">
                <div class="single-blog-post mb-50">
                  <!-- Thumbnail -->
                  <div class="post-thumbnail">
                    <a href="#"><img src="img/blog-img/medicine.jpg" alt=""></a>
                  </div>
                  <!-- Content -->
                  <div class="post-content">
                    <p class="post-date">Example1</p>
                    <a href="#" class="post-title">
                      <h4>New anti-record for the number of deaths from COVID-19 recorded in India</h4>
                    </a>
                    <p class="post-excerpt">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit.</p>
                  </div>
                </div>
              </div>
              <!-- Single Blog Post -->
              <div class="col-12 col-lg-6">
                <div class="single-blog-post mb-50">
                  <!-- Thumbnail -->
                  <div class="post-thumbnail">
                    <a href="#"><img src="img/blog-img/4.jpg" alt=""></a>
                  </div>
                  <!-- Content -->
                  <div class="post-content">
                    <p class="post-date">Example2</p>
                    <a href="#" class="post-title">
                      <h4>Robin Hoods vs Musk: what will turn out to be the war of Anonymous with the founder of SpaceX</h4>
                    </a>
                    <p class="post-excerpt">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>
<!-- ##### Blog Content Area End ##### -->
