<%- include('header'); -%>
<!-- ##### Hero Area Start ##### -->

<!-- ##### Hero Area End ##### -->
<!-- ##### Blog Content Area Start ##### -->
<section class="blog-content-area section-padding-100">
  <div class="container">
    <div class="row justify-content-center">
      <!-- Blog Posts Area -->
      <div class="col-12 col-lg-8">
        <div class="blog-posts-area">
          <div class="row">
            <!-- Featured Post Area -->
            <div class="col-12">
              <div class="featured-post-area mb-50">
                <h3>Travel</h3>
              </div>
            </div>

            <%itemList.forEach(function(item){ %>
              <!-- Single Blog Post -->
              <div class="col-12 col-sm-6">
                <div class="single-blog-post mb-50">
                  <!-- Thumbnail -->
                  <div class="post-thumbnail">
                    <a href="#"><img src="img/blog-img/travel.jpg" alt=""></a>
                  </div>
                  <!-- Content -->
                  <div class="post-content">
                    <p class="post-date"><%=item.author%> / <%=item.category%></p>
                    <a href="#" class="post-title">
                      <h4><%=item.title%></h4>
                    </a>
                    <p class="post-excerpt"><%=item.content%></p>
                    <div class="row">
                      <form action="/delete" method="post" class="col-2">
                        <button class="btn btn-sm btn-danger" onClick="this.form.submit()" type="button">Delete</button>
                        <input type="hidden" name="check" value="<%=item._id%>">
                      </form>
                      <form action="/update" method="post" class="col-2">
                        <button class="btn btn-sm btn-primary" onClick="this.form.submit()" type="button">Edit</button>
                        <input type="hidden" name="check" value="<%=item._id%>">
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <%})%>

          </div>
        </div>
      </div>
      <!-- Blog Sidebar Area -->
      <div class="col-12 col-sm-9 col-md-6 col-lg-4">
        <div class="post-sidebar-area">
          <!-- ##### Single Widget Area ##### -->
          <div class="single-widget-area mb-30">
            <!-- Title -->
            <div class="widget-title">
              <h6>About Weather</h6>
            </div>
            <!-- Thumbnail -->
            <div class="about-thumbnail">
              <img src="img/blog-img/weather.jpg" alt="">
            </div>
            <div class="search-form">
              <form action="/" method="post">
                <input type="text" name="city" placeholder="City">
                <button type="submit" name="button">Search</button>
              </form>
            </div>
            <br>
            <!-- Content -->
            <div class="widget-content text-center">
            <h3><%=weather_title%></h3>
            <p><%=weather_desc%></p>
              <img src="img/core-img/logo.png" alt="">
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ipsum adipisicing</p>
            </div>
          </div>
          <!-- ##### Single Widget Area ##### -->
          <div class="single-widget-area mb-30">
            <!-- Title -->
            <div class="widget-title">
              <h6>popular tags</h6>
            </div>
            <!-- Tags -->
            <ol class="popular-tags d-flex flex-wrap">
              <li><a href="/cat-medicine">- Medicine</a></li>
              <li><a href="/cat-food">- Food</a></li>
              <li><a href="/cat-travel">- Travel</a></li>
              <li><a href="/cat-education">- Education</a></li>
              <li><a href="/cat-politics">- Politics</a></li>
              <li><a href="/cat-sport">- Sport</a></li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ##### Blog Content Area End ##### -->
<%- include('footer'); -%>
